# IP管理器 环境配置文件
# 复制此文件为 .env 并根据实际情况修改

# ==================== 数据库配置 ====================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=ip_manager
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# ==================== 应用配置 ====================
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# ==================== 安全配置 ====================
# 管理员密码（首次安装后会自动哈希存储）
ADMIN_PASSWORD=admin123

# 管理员访问密钥（可选）
ADMIN_SECRET_KEY=

# 允许访问后台的IP（逗号分隔，留空允许所有）
ADMIN_ALLOWED_IPS=

# ==================== 缓存配置 ====================
CACHE_DRIVER=file
CACHE_TTL=300

# ==================== 日志配置 ====================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ==================== Cloudflare 配置 ====================
CF_API_TOKEN=
CF_ZONE_ID=

# ==================== Namemart 配置 ====================
NM_API_KEY=
NM_API_SECRET=

# ==================== 限流配置 ====================
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_API=50
RATE_LIMIT_IP=30
